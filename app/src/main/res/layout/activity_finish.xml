<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.eti.tassio.leiturista.FinishActivity">

    <TextView
        android:id="@+id/msgOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Tudo certo!"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/msgQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgOK"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="O que deseja fazer agora?"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btNewCapture"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="Nova Foto"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btOk"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btNewCapture"
        android:layout_alignBottom="@+id/btNewCapture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="Finalizar"
        android:textSize="20dp" />
</RelativeLayout>
